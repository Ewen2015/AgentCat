{
  "manifest_version": 3,
  "name": "SideMate AI Agent",
  "version": "1.0.0",
  "description": "AI Agent side panel to analyze pages and automate tasks autonomously.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open SideMate AI",
    "default_icon": "cat.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}